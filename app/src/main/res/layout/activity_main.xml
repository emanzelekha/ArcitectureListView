<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.trippl3dev.listlibrary.customview.ArchitectureListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:fragmentId="@string/app_name"
            app:vmClassName="com.mahmoud.architecturerecyclerview.simple.SimpleListVM"
            android:id="@+id/simpleList"
    />
    <com.trippl3dev.listlibrary.customview.ArchitectureListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:fragmentId="@string/app_name"
            app:vmClassName="com.mahmoud.architecturerecyclerview.simple.SecondSimpleListVM"
            android:id="@+id/simpleList2"
    />

</LinearLayout>